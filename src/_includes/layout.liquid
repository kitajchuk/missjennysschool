<!doctype html>
<html lang="en" class="{{ class }} bg-cream text-dark-olive">
  <head>
    {% render "metadata"
      , site: site
      , slug: slug %}
    <title>
      {% if title %}
        {{ title }} |
      {% endif %}
      {{ site.title }}
    </title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <header class="flex justify-between items-center bg-white/90 py-5 px-8 sticky top-0 z-10 border-b border-silver max-sm:px-4 max-sm:py-4">
      {% render "navi"
        , site: site
        , slug: slug
        , navi: navi %}
    </header>
    <main>
      {{ content }}
    </main>
    <footer class="text-pearl text-center font-medium font-serif bg-slate py-24 px-8 flex items-center justify-center max-sm:py-16 max-sm:px-4 max-sm:flex-col max-sm:gap-16">
      <ul class="hidden flex-col items-center gap-4 max-sm:flex">
        {% for link in navi %}
          <li>
            <a href="/{{ link }}/">{{ link | capitalize }}</a>
          </li>
        {% endfor %}
      </ul>
      {% render "social"
        , site: site
        , classes: "hidden max-sm:flex" %}
      <p>Copyright
        <span id="year">{{ "now" | date: "%Y" }}</span><br/>
        {{ site.title }}</p>
    </footer>
    {% assign js_script = script | default: "index" %}
    <script type="module" src="/js/{{ js_script }}.js"></script>
  </body>
</html>