{% assign link_url = link %}
{% assign link_text = text %}
{% assign link_target = target | default: "_blank" %}
{% assign link_rel = rel | default: "noopener noreferrer" %}

<a
  href="{{ link_url}}"
  class="text-beaver hover:text-coffee border-b transition-colors motion-reduce:transition-none"
  target="{{ link_target }}"
  rel="{{ link_rel }}">
  {{ link_text }}
</a>