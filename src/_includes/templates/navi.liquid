<nav
  id="navi"
  aria-label="Main navigation"
  class="flex items-center gap-8 w-full text-coffee font-medium font-serif">
  <a
    href="/"
    aria-label="Home"
    {% if slug == "" %}
    aria-current="page"
    {% endif %}
    class="block relative z-20">
    {% render "templates/logo" %}
  </a>
  <button
    class="cursor-pointer ml-auto relative z-20 flex items-baseline gap-2 sm:hidden"
    aria-expanded="false"
    aria-controls="navi"
    id="navi-control">
    <span>Menu</span>
    <span id="navi-arrow" class="transition-transform motion-reduce:transition-none">
      {% render "svg/arrow_down" %}
    </span>
  </button>
  <div id="navi-menu" class="flex flex-1 items-center justify-between w-full max-sm:text-cream max-sm:fixed max-sm:inset-0 max-sm:bg-slate max-sm:z-10 max-sm:flex-col max-sm:justify-center max-sm:gap-16 max-sm:pointer-events-none max-sm:opacity-0 motion-reduce:transition-none">
    <ul class="flex flex-col gap-6 items-center text-h6-max sm:text-base sm:flex-row sm:gap-4">
      {% for link in navi %}
        <li>
          <a
            href="/{{ link }}/"
            {% if slug == link %}
            aria-current="page"
            class="border-b border-inherit"
            {% endif %}>{{ link | capitalize }}</a>
        </li>
      {% endfor %}
    </ul>
    {% render "templates/social"
      , site: site
      , classes: "text-inherit sm:text-copper" %}
  </div>
</nav>