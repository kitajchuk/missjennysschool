---
layout: layout.liquid
title: All Recipes
pagination:
  data: all_recipes
  size: 10
permalink: "recipes/all/{% if pagination.pageNumber > 0 %}page/{{ pagination.pageNumber | plus: 1 }}/{% endif %}"
---

<section class="section-padding page-section">
  <h1 class="text-coffee text-h1-lg font-serif font-medium text-center">
    All Recipes
  </h1>
  {% render "separator" %}
  {% render "templates/post_list"
    , posts: pagination.items
    , post_type: "recipes"
    , pagination: pagination
    , post_link_text: "Make this recipe" %}
</section>